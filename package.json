{
  "name": "fe-spec",
  "private": true,
  "description": "前端编码规范工程化",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "init": "pnpm install",
    "clean-dist": "rimraf 'packages/*/{lib,es,node_modules,dist}'",
    "clean": "pnpm run clean-dist && rimraf node_modules",
    "build": "lerna run build --stream",
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs",
    "deploy": "bash deploy.sh",
    "publish": "lerna publish --yes",
    "lint": "markdownlint -c .markdownlint.json README.md **/*.md",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s"
  },
  "keywords": [
    "encode",
    "fe spec"
  ],
  "author": "zhoumiaomiao",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "husky": "^9.1.7",
    "lerna": "^8.2.3",
    "markdownlint": "^0.38.0",
    "pnpm": "^10.15.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typedoc": "^0.28.10",
    "typescript": "^5.9.2",
    "vue-template-compiler": "^2.7.16",
    "vuepress": "^1.9.10",
    "vuepress-plugin-one-click-copy": "^1.0.6",
    "vuepress-plugin-zooming": "^1.1.8"
  },
  "dependencies": {
    "conventional-changelog-conventionalcommits": "^9.1.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}